<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="todoCategory"
            type="com.msk.simpletodo.data.model.todo.TodoCategoryWithTodo" />
    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/todoFrameCard"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:elevation="15dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <ImageView
                android:id="@+id/todoMainIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/todoTypeSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@{@string/categoryHaveTask(todoCategory.todo.size())}"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@+id/todoType"
                app:layout_constraintStart_toStartOf="@+id/todoType" />

            <TextView
                android:id="@+id/todoType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{todoCategory.todoCategory.category}"
                android:textColor="@color/font_case"
                android:textSize="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>
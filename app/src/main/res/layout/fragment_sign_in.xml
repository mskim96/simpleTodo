<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.auth.signin.SignInFragment">

    <ImageView
        android:id="@+id/authMainLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/app_logo"
        app:layout_constraintBottom_toBottomOf="@+id/authMainTitle"
        app:layout_constraintEnd_toStartOf="@+id/authMainTitle"
        app:layout_constraintTop_toTopOf="@+id/authMainTitle" />


    <TextView
        android:id="@+id/authMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/kano"
        android:text="Std"
        android:textStyle="bold"
        android:textColor="@color/font_header"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/noto_serif"
        android:text="Welcome back."
        android:textColor="@color/font_case"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authMainTitle"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/navSignInGoogleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_auth_withicon"
        android:drawableStart="@drawable/auth_oauth_google"
        android:text="Sign in with Google"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/font_case"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/navSignInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_auth_withicon"
        android:drawableStart="@drawable/current_mail"
        android:drawableTint="@color/font_case"
        android:text="Sign in with Email"
        android:textAllCaps="false"
        android:textColor="@color/font_case"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navSignInGoogleButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/navSignInTwitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_auth_withicon"
        android:drawableStart="@drawable/auth_oauth_twitter"
        android:fontFamily="sans-serif"
        android:text="Sign in with Twitter"
        android:textAllCaps="false"
        android:textColor="@color/font_case"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navSignInButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/navSignInGithub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_auth_withicon"
        android:drawableStart="@drawable/auth_oauth_github"
        android:fontFamily="sans-serif"
        android:text="Sign in with Github"
        android:textAllCaps="false"
        android:textColor="@color/font_case"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navSignInTwitter" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="You Don't have Account?"
        android:textAlignment="center"
        android:textColor="@color/font_case"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navSignInGithub"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/signInNavButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingVertical="8dp"
        android:text="Sign up."
        android:textColor="@color/default_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toTopOf="@+id/textView22" />


</androidx.constraintlayout.widget.ConstraintLayout>